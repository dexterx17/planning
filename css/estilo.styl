@import 'mixins'
fuente_general=verdana, sans-serif

//Colores Componentes
color_background_uno=#FFF
color_background_uno_sec=#FDFDFD
color_background_dos=#000
color_background_dos_sec=#202020
color_background_tres=#002500
color_background_tres_sec=#005000
color_alert_info=brown
color_alert_error=rgb(248,147,132)
color_alert_success=rgb(0,150,0)

//Colores del texto
color_txt=rgb(255,255,255)
color_txt_botones=rgb(0,0,0)
color_txt_titulos=rgb(255,255,255)
color_txt_subtitulos=rgb(200,200,200)
color_txt_enlaces=rgb(180,180,180)
color_txt_enlaces_menu=rgb(180,180,180)
color_txt_labels=rgb(200,200,200)
color_txt_error=rgb(248,147,132)
color_txt_success=rgb(14,171,99)
radio_bordes=1px
radio_bordes_marcados=10px 10px


*
	margin 0px
	padding 0px
	color color_txt
	
header, section, footer, aside, nav, article, figure, figcaption, hgroup
	display block
	
h1
	font-family fuente_general
	font-size 20px
	font-weight bold
	color color_txt_titulos
	
h2
	font-family fuente_general
	font-size 14px
	font-weight bold
	color color_txt_subtitulos
	
a
	color color_txt_enlaces
	text-decoration none

body
	text-align center
	background color_background_uno

.contenedor-main
	width 100%
	margin auto
	text-align left
	border-radius radio_bordes

.contenedor
	display block
	
.contenedor-left
	display inline-block
	background color_background_tres
	width 150px
	position absolute
	left 0
	z-index 1666

.contenedor-right
	display block
	margin-left 150px
	padding 0
	min-height 500px
	background-linear-gradient(top, color_background_dos_sec, 80%, color_background_uno_sec, 100%)

.cabecera
	display block
	background color_background_dos
	border-radius radio_bordes
	width 98%
	padding 1%
	clear both
	.title
		display inline-block
		width 60%
	.tooltips
		display inline-block
		width 38%
		overflow hidden
		border 1px dashed color_background_uno_sec
		border-radius radio_bordes_marcados
		background-color color_background_uno
		
 
.menu 
	border-radius radio_bordes
	width 100%
	ul
		padding 0px
		margin 0px
		width 100%
		line-height 0.5em
		list-style none outside none
		li
			overflow hidden 
			a
				line-height normal
				font-size 14px
				padding 10px 10px 10px 11px
				display block
				font-weight 400
				text-decoration none !important
				position relative
				color color_txt_enlaces_menu
				b
					position absolute !important
					right 10px
					top 10px


		ul
			margin 0px
			padding 7px 0px
			background-color color_background_tres_sec
			li
				margin 0px
				padding 0px
			> a 
				padding-left 42px
				font-size 14px
				font-weight 400
				outline 0px none

	> ul > li > ul > li > a 
		padding-top 7px
		padding-bottom 7px

.menu ul li li
	border-bottom 0px none
	position relative


ul#ul-arbol, ul#ul-arbol ul
	list-style-type none
	background url(../images/linea_vertical.gif) repeat-y
	ul
		margin-left 5px
		list-style-type none
	li
		padding 0 10px
		background url(../images/nodo.gif) no-repeat
		.cierre
			background #000 url(../images/cierre.gif) left top no-repeat

.top-bar
	display block
	width 100%
	height 30px
	background color_background_dos_sec
	border-radius radio_bordes
	box-shadow 0px 3px 3px color_background_uno


.breadcumbs
	display inline-block
	list-style none outside none
	margin-left 5px
	padding 5px 34px 5px 0px
	color rgb(255,255,255)
	background none repeat scroll 0px 0px transparent
	vertical-align top
	>li 
		display inline-block
	+ li:before 
		content "/\00a0"
		padding 0 5px
		color #ccc


.contenido
	padding 10px 14px
	position relative
	display block
	left 0px
	//background rgb(225,225,225)
	overflow hidden
	

.seccion
	display block
	width 100%
	float left
	//background-color color_background_tres
	hgroup
		padding 5px 10px 
		margin-top 5px
		margin-left 5px
		background-color color_background_dos
		border-radius radio_bordes_marcados
		line-height 1.5em
		box-shadow 3px 2px 10px color_background_tres inset
		small
			font-style italic
		.menu-sec
			float right
			vertical-align middle
			height 100%
			ul
				text-decoration none
				li
					display inline
					margin 5px
	article
		padding 20px
		margin-bottom 15px
		display inline-block
		width 60%
		box-shadow -3px 0px 5px color_background_uno
		border-radius 5px
		footer
			text-align right
		form
			padding 5px 25px
	article.master
		width 98%
		
	aside
		display inline-block
		width 30%
		background-color color_background_uno
		box-shadow -3px 0px 5px color_background_uno
		vertical-align top
		
        
.pie
	width 100%
	clear both
	position relative
	display block
	background #CCCCCC
	vertical-align middle
	text-align center
	background rgb(200,200,200) 
	border-radius 5px 5px
	bottom 0px
/*	
	border 1px solid #999999
	*/


.row
	display block

@media (min-width: 1000px)
	.row
		label
			display inline-block
			width 18%
			text-align right
			padding-right 10px
			color color_txt_labels
			margin-right 10px
		input
			display inline-block
			width 60%
			margin-left 20px
			padding-left 10px
		
@media (min-width: 600px)
	.row
		label
			display inline-block
			width 10%
			text-align right
			padding-right 10px
			color color_txt_labels
		input
			display inline-block
			width 60%
			margin-left 5px

input 
	color color_txt_botones
input.valid
	border-color none !important
	background-color none !important
	
input.error
	border-color color_txt_error
	background-color color_alert_error
	
label.valid 
	width 24px
	height 24px
	background url(../images/valid.png) center center no-repeat
	display inline-block
	text-indent -9999px

label.error 
	font-weight bold
	color color_txt_error
	padding: 2px 8px;
	margin-top: 2px;
	
.col-3,
.col-6
	display inline-block
	position relative


.col-3
	width 24%


.col-6
	width 48%

.block
	border 1px solid rgb(0,0,0)
	padding 10px
	margin-top 10px
	margin-bottom 10px
	.col-main
		display inline-block
		width 40%
	.col-secondary
		display inline-block
		width 58%

time
	color #999999


figcaption
	font italic 14px verdana, sans-serif


.panel
	display block


.panel-header
	display block
	.menu-operaciones
		float right

.panel-body
	display block


.btn
	background rgb(50,50,50)
	border-radius 5px
	margin 2px 2px 2px 5px
	display inline-block

.todo-list
	margin 0
	padding 0px 0px
	list-style none

.todo-list > li
	-webkit-border-radius 2px
	-moz-border-radius 2px
	border-radius radio_bordes_marcados
	padding 10px
	background-color color_background_dos 
	margin-bottom 2px
	border-left 2px solid #e6e7e8
	color #444

.todo-list > li:last-of-type
	margin-bottom 0

.todo-list > li.danger 
	border-left-color #f56954

.todo-list > li.warning 
	border-left-color: #f39c12

.todo-list > li.info 
	border-left-color: #00c0ef

.todo-list > li.success
	border-left-color #00a65a

.todo-list > li.primary
	border-left-color #3c8dbc

.todo-list > li > input[type='checkbox']
	margin 0 10px 0 5px

.todo-list > li .text
	display: inline-block
	margin-left 5px
	font-weight 600

.todo-list > li .label
	margin-left 10px
	font-size 9px

.todo-list > li .tools
	display none
	float right
	color #f56954

.todo-list > li .tools > .fa,
.todo-list > li .tools > .glyphicon,
.todo-list > li .tools > .ion 
	margin-right 5px
	cursor pointer

.todo-list > li:hover .tools
	display inline-block

.todo-list > li.done
	color #999

.todo-list > li.done .text
	text-decoration line-through
	font-weight 500

.todo-list > li.done .label
	background #eaeaec !important

.todo-list .handle
	display inline-block
	cursor move
	margin 0px 5px

form
	padding 2px
	.row
		display block
		padding 5px 0px 5px 10px
	.footer
		margin 10px 0px 0px 10px
		bottom 0px
		width 100%
		input
			display inline